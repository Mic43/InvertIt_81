<UserControl
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NoNameGame"
    xmlns:customControls="clr-namespace:NoNameGame.CustomControls"
    x:Class="NoNameGame.CustomControls.GamePausedControl"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Center">

    <customControls:PopupWindowBase Header="Game paused...">

        <StackPanel Margin ="0,10,0,0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" >
            
            <Button Margin="10,0,10,0" x:Name="ResumeButton" Content="Resume" VerticalAlignment="Bottom" Style="{StaticResource ButtonStyleDynamicThemes}"/>
            <Button Margin="10,-10,10,0" x:Name="GoToMenuButton" Content="Menu" Style="{StaticResource ButtonStyleDynamicThemes}"/>
        </StackPanel>
      
    </customControls:PopupWindowBase>

</UserControl>