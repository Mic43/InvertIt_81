<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="CheckedAreaColor">#77BA5D</Color>
    <Color x:Key="UnCheckedAreaColor">#BA5D90</Color>
    <Color x:Key="ThirdAreaColor">#437019</Color>

    <SolidColorBrush x:Key="CheckedAreaGradientBrush" Color="{StaticResource CheckedAreaColor}">        
    </SolidColorBrush>
    <SolidColorBrush x:Key="UnCheckedAreaGradientBrush" Color="{StaticResource UnCheckedAreaColor}">
    </SolidColorBrush>
    <SolidColorBrush x:Key="OverlayGradientBlue" Color="{StaticResource CheckedAreaColor}">
     </SolidColorBrush>
    <SolidColorBrush x:Key="OverlayGradientRed" Color="{StaticResource UnCheckedAreaColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="OverlayGradientGreen" Color="{StaticResource UnCheckedAreaColor}">
        </SolidColorBrush>
   
</ResourceDictionary>