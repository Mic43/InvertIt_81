<Window x:Class="LevelEditor.DisabledAreasEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoveLevelWindows"
        Width="300"
        Height="300">
    <Grid Name="MainGrid" Margin="0,0,2,10">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="StackPanel">
            
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBox Name="DisabledFieldsTextBox" TextChanged="DisabledFieldsTextBox_OnTextChanged">
                
            </TextBox>
        </Grid>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button Name="OkButton"
                    Width="100"
                    HorizontalAlignment="Center"
                    Click="OkButton_OnClick"
                    IsDefault="True">
                Ok
            </Button>
            <Button Width="100"
                    HorizontalAlignment="Center"
                    IsCancel="True">
                Cancel
            </Button>
        </StackPanel>
    </Grid>
</Window>
